<div class="page-header" id="secondheader">
<div id="navi">
<ul class="nav nav-pills">
  <li role="presentation" class="activeo"><a href=<%= "/organizers/#{@organizer.id}/summary"%> >Summary</a></li>
  <li role="presentation"><a href=<%= "/organizers/#{@organizer.id}/profile" %> >Profile</a></li>
  <li role="presentation"><a href=<%= "/organizers/#{@organizer.id}/activities"%> >My Activity</a></li>
  <li role="presentation"><a href=<%= "/organizers/#{@organizer.id}/ideas" %> >My Ideas</a></li>
</ul>
</div>
</div>



<!-- showing the summary of a participant -->
<div class="container">
<div class="row">
	<div class="summary-profile">
		<div class="headpic">
			<%= image_tag(@organizer.avatar.url(:thumb), :class => "headpotrait") if @organizer.avatar? %>
		</div>
		<br>
		<h3><%= @organizer.name%></h3>
		<h5><span class="glyphicon glyphicon-map-marker"></span>&nbsp
			Los Angeles &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
			<span class="glyphicon glyphicon-grain"></span>
			<%= @organizer.email%>
		</h5>
	</div>
	
	<div class="summary-activity">
		<h4>&nbsp</h4>
		<% @activities.each do |activity|%>
			<div class="col-md-3">
				<div class="thumbnail">
			  <a href=<%= "/organizers/#{@organizer.id}/activities/#{activity.id}" %> >
			  	  <%= image_tag(activity.avatar.url(:large)) if activity.avatar? %>
			  </a>  
			  <div class="caption">
				  <p class="text-center">
				  	<strong><%= activity.name%></strong>
				
				  </p>  
			  </div>
			</div>
		</div>
		 <% end %>
		<div class= "clear"></div>
	</div>

	<div class= "clear"></div>

<div class="allidea">
  <h4>&nbsp</h4>
  <%if @ideas.length > 0 %>
  <div class="idea idea1">     
        <%= image_tag(("7.png"), :class => "pegen") %>
        <p class="text-center text1" data-toggle="tooltip" data-placement="top" title="<%= @ideas.find(1).description%>">
    <!--     <button data-toggle="tooltip" data-placement="top" title="<%= @ideas.find(1).description%>"><%= @ideas.find(1).title %></button> -->
    <%= @ideas.find(1).title %>
        </p>
   <% end %>

      
  </div> 
  <%if @ideas.length > 1 %>
  <div class="idea idea2" >     
        <%= image_tag(("6.png"), :class => "pegen") %>
        <p class="text-center text2" data-toggle="tooltip" data-placement="top" title="<%= @ideas.find(2).description%>">
          <%= @ideas.find(2).title %>
        </p>
      
  </div> 
  <% end %>
  <%if @ideas.length >2 %>

  <div class="idea idea3">     
        <%= image_tag(("5.png"), :class => "pegen") %>
        <p class="text-center text3" data-toggle="tooltip" data-placement="top" title="<%= @ideas.find(3).description%>">
          <%= @ideas.find(3).title %>
        </p>
      
  </div>
  <% end %>

  <div class="clear"></div>
  <br>
  <br>
  <br>
</div>
 <div class="clear"></div>
</div>
</div>