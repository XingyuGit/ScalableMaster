<div class="page-header" id="secondheader">
<div id="navi">
<ul class="nav nav-pills">
  <li role="presentation" class="activeo"><a href=<%= "/organizers/#{@organizer.id}/summary"%> >Summary</a></li>
  <li role="presentation"><a href=<%= "/organizers/#{@organizer.id}/profile" %> >Profile</a></li>
  <li role="presentation"><a href=<%= "/organizers/#{@organizer.id}/activities"%> >My Activity</a></li>
  <li role="presentation"><a href=<%= "/organizers/#{@organizer.id}/ideas" %> >Related Ideas</a></li>
</ul>
</div>
</div>


<%@ideas%>
<!-- showing the summary of a participant -->
<div class="container">
<div class="row">
	<div class="summary-profile">
		<div class="headpic">
			<%= image_tag(@organizer.avatar.url(:thumb), :class => "headpotrait") if @organizer.avatar? %>
		</div>
		<br>
		<h3 class="h4"><%= @organizer.name.capitalize%></h3>
		<h5><span class="glyphicon glyphicon-map-marker"></span>&nbsp;
			Los Angeles &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<span class="glyphicon glyphicon-grain"></span>
			<%= @organizer.email%>
		</h5>
	</div>
	
	<div class="summary-activity">
    <h5>&nbsp;</h5>
		<h4 class="h4">MY ACTIVITY</h4>
    <h4>&nbsp;</h4>

		<% @activities.each do |activity|%>
			<div class="col-md-3">
				<div class="thumbnail">
			  <a href=<%= "/organizers/#{@organizer.id}/activities/#{activity.id}" %> >
		  	  <%= image_tag(activity.avatar.url(:large)) if activity.avatar? %>
    		  <div class="caption text-center">
            <h4><%= activity.name%></h4>
          </div>
        </a>
			</div>
		</div>
		 <% end %>
		<div class= "clear"></div>
	</div>

	<div class= "clear"></div>


<div class="allidea">
  <h4 class="h4">MY IDEAS</h4>
  <%if @ideas.length > 0 %>
  <div class="idea idea4">     
        <%= image_tag(("4.png"), :class => "pegen") %>
        <p class="text-center text1" data-toggle="tooltip" data-placement="top" title="<%= @ideas[0].description%>">
    <%= @ideas[0].title %>
        </p>
   <% end %>

      
  </div> 
  <%if @ideas.length > 1 %>
  <div class="idea idea5" >     
        <%= image_tag(("1.png"), :class => "pegen") %>
        <p class="text-center text2" data-toggle="tooltip" data-placement="top" title="<%= @ideas[1].description%>">
          <%= @ideas[1].title %>
        </p>
      
  </div> 
  <% end %>
  <%if @ideas.length >2 %>

  <div class="idea idea6">     
        <%= image_tag(("2.png"), :class => "pegen") %>
        <p class="text-center text3" data-toggle="tooltip" data-placement="top" title="<%= @ideas[2].description%>">
          <%= @ideas[2].title %>
        </p>
      
  </div>
  <% end %>

  <%if @ideas.length >3 %>

  <div class="idea idea7">     
        <%= image_tag(("3.png"), :class => "pegen") %>
        <p class="text-center text3" data-toggle="tooltip" data-placement="top" title="<%= @ideas[3].description%>">
          <%= @ideas[3].title %>
        </p>
      
  </div>
  <% end %>

  <div class="clear"></div>
  <br>
  <br>
  <br>
</div>
 <div class="clear"></div>

</div>
<script type="text/javascript">
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>
</div>