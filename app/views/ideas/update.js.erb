var link = $("#idea-<%= @idea.id %> a");
var isLiked = link.hasClass("liked");

if (isLiked) {
    link.replaceWith('<%= j link_to "", idea_path(@idea, like: true),
        method: :patch, class: "glyphicon glyphicon-heart-empty", remote: true %>');
} else {
    link.replaceWith('<%= j link_to "", idea_path(@idea, like: false),
        method: :patch, class: "liked glyphicon glyphicon-heart", remote: true %>');
}
